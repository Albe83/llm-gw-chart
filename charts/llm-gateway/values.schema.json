{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "namespaceOverride": {
      "type": "string",
      "default": "",
      "description": "Override the release namespace."
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Number of replicas for the deployment."
    },
    "envConfig": {
      "type": "object",
      "default": {
        "PORT": 4000
      },
      "properties": {
        "PORT": {
          "type": "integer",
          "minimum": 1025,
          "maximum": 65535,
          "default": 4000,
          "description": "TCP port where the application listens and which is exposed by the service."
        }
      },
      "additionalProperties": {
        "type": "string"
      },
      "description": "Plain text environment variables added via ConfigMap."
    },
    "envSecret": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "type": "string"
      },
      "description": "Sensitive environment variables added via Secret."
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "default": "albe83/llm-gw",
          "description": "Container image repository."
        },
        "tag": {
          "type": "string",
          "default": "v0.0.6",
          "description": "Container image tag."
        },
        "digest": {
          "type": "string",
          "default": "sha256:517933f26f912ccfdb1dcd5d7279816f92340085a98cbbbfe8f8a099f83ac43",
          "description": "Container image digest."
        },
        "pullPolicy": {
          "type": "string",
          "enum": [
            "Always",
            "IfNotPresent",
            "Never"
          ],
          "default": "IfNotPresent",
          "description": "Kubernetes image pull policy."
        }
      },
      "required": [
        "repository",
        "tag",
        "digest",
        "pullPolicy"
      ]
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "ClusterIP",
            "NodePort",
            "LoadBalancer",
            "ExternalName"
          ],
          "default": "ClusterIP",
          "description": "Kubernetes service type."
        }
      },
      "required": ["type"]
    }
  },
  "required": [
    "replicaCount",
    "image"
  ]
}
